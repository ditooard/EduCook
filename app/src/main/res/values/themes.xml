<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.EduCook" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/red</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/white</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="hintTextColor">@color/gray</item>
    </style>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">

        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.AppCompat.Circle</item>
    </style>

    <style name="ShapeAppearanceOverlay.AppCompat.Circle" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="RoundedCorners">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeBottomRight">10dp</item>
        <item name="cornerSizeBottomLeft">10dp</item>
    </style>

    <style name="CustomBottomAppBarStyle" parent="Widget.MaterialComponents.BottomAppBar">
        <item name="backgroundTint">?attr/colorSecondary</item>
        <item name="shapeAppearance">@style/BottomAppBarShapeAppearance</item>
    </style>

    <style name="BottomAppBarShapeAppearance" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
        <item name="strokeColor">@color/gray</item>
        <item name="strokeWidth">2dp</item>
    </style>

    <style name="SearchBarShape" parent="Widget.Material3.SearchBar">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">10dp</item>
    </style>

    <style name="Theme.EduCook" parent="Base.Theme.EduCook" />
</resources>